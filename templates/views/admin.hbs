<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/admin-style.css">

    <title>Admin</title>
  </head>
<body onload="addPolicy();">

    <div class="admin">
        <div class="container-fluid">
            <div class="row justify-content-between mt-4">
                             {{#if mess}}
                            <div class="alert alert-success mt-3" role="alert">
                                {{mess}}
                            </div>
                            {{/if}}



                <div class="col-2 head-img">
                    <img src="/images/logo.png" alt="logo" class="img-fluid">
                        {{#if filepath}}     
                    <div class="text-center profile-div">
                        <img src="{{filepath}}" alt="profile Pic" class="mt-3 img-fluid profile-img" style="height:inherit; width:inherit">
                    </div>          
                        {{/if}}

                    <form action="/edit_profile_pic" method="post" enctype="multipart/form-data">
                     
                        <label for="profile-img" class="btn col-auto btn-dark btn-sm mt-3">Edit Profile Picture</label>
                        <input type="file" name="image" id="profile-img" style="display: none;" required>
                        <br>
                        <input type="submit" class="btn col-auto btn-success btn-sm mt-2" value="Save">
                    </form>


                </div>
                <div class="col-auto">
                    <div class="row">
                        <div class="col-5 welcome-username">
                            <h4 style="color: rgb(94, 90, 90);font-size:20px">Welcome:</h4>
                        </div>
                        <div class="col-5 welcome-username">
                            <h4 style="color: #03a9f4db;font-size:20px">{{user_name}}</h4>
                        </div>
                        <div class="col-2 welcome-opt">
                            <button class="wel-button" onclick="showDrop()"><i class="bi bi-gear"></i></button>
                        </div>
                                
                        <div class=" col-12 welcome-drop" id="wel-drop">
                            <ul>
                                <a href="#" class="drop-anc">Profile</a>
                                <a href="/forget_pass/reset" class="drop-anc-2">Reset Password</a>
                                <a href="/logout" class="drop-anc-3">Logout</a>
                            </ul>
                        </div>
                            
                     </div>
                </div>                      
                </div>
            </div>

                             <!-- for sucessful submission
                            <div class="alert alert-success mb-3 mt-3" role="alert">
                                Form submitted successfully
                            </div>


                            for failed submission
                            <div class="alert alert-danger mb-3 mt-3" role="alert">
                                Form Not Submitted
                            </div> -->
            <div class="row text-center">
                <div class="col-12">
                    <h2>Admin Policy Upload</h2>
                </div>
            </div>

            <div class="row justify-content-center mt-4">
                <div class="col-10">
                    <div class="row mb-4">
                        <div class="col-5">
                            <input class="admin-input w-100" type="text" placeholder="Policy Number #" id="policy_number">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                            <input class="admin-input w-100" type="text" placeholder="Progress name" id="policy_name">
                        </div>
                        <div class="col-6">
                            <div class="mb-3">
                                 <input class="file-input" id="files" type="file">
                                <div class="line"></div>
                              </div>
                        </div>
                    </div>
                    
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-2">
                    <select class="menu" id="program">
                        <option>HR Employee Mgmt</option>
                        <option>Training Career Mgmt</option>
                        <option>Corporate Standards</option>
                        <option>Claint Rights</option>
                        <option>Claint Management</option>
                        <option>Service Options</option>
                        <option>Miscellaneus</option>
                    </select>
                </div>
                <div class="col-4">
                    <select class="menu-2" id="catagory">
                        <option>ACT</option>
                        <option>ARMHS</option>
                        <option>MCT</option>
                        <option>CTSS</option>
                        <option>ITFC</option>
                        <option>IRMHS</option>
                        <option>IRTS</option>
                        <option>RCH</option>
                        <option>MHC</option>
                        <option>ADT</option>
                        <option>PHP</option>
                    </select>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-5 half-div">
                    <div class="row">
                        <div class="col-12">
                            <div class="row justify-content-between">
                                <div class="col-2">
                                    <h3>Statutes</h3>
                                </div>
                                <div class="col-2">
                                    <button class="my-btn" id="Add-btn" onclick="addPolicy()">ADD</button>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-12" id="custom-div">
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-5 half-div-2">
                    <div class="row">
                        <div class="col-12">
                            <div class="row justify-content-between">
                                <div class="col-2">
                                    <h3>Subdivision</h3>
                                </div>
                                <div class="col-2">
                                    <button class="my-btn" id="division-btn" onclick="addDivision(focus_id)">ADD</button>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-12" id="custom-division">
                                    <div id="d_remove"></div>
                                </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="row mb-5">
                <div class="col-12 text-center">
                    <button class="policy-btn" onclick="savePolicy()">SAVE POLICY</button>
                </div>
            </div>

        </div>
    </div>


        {{#if fileError}}
            <script>alert('{{fileError}}')</script> 
        {{/if}} 



    <script>
        function showDrop() {
            var x = document.getElementById("wel-drop");
            if (x.style.display === "none") {
            x.style.display = "block";
            } else {
            x.style.display = "none";
            }
        }
    </script>
    <script src="./js/admin.js"></script>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>